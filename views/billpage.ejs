<%- include("partials/header") -%>
<form id="formpg" action="/billupload" method="post">
<div class="container">
        <div class="item">
        <label>Customer name</label>
        <input type="text" name="customername" autocomplete="off"   placeholder="Enter Customer name" required  >
        </div>
<div class="item">
        <label> Address </label>
        <input type="text" name="address" autocomplete="off"  placeholder="Enter Address" required>
    </div>
    <div class="item">
        <label> Mobile No </label>
        <input type="number" min="10"  autocomplete="off" name="mobileno"    placeholder="Enter mobile no" required>
        </div>
        <div class="item">
        <label> IMEI NO </label>
        <input type="text" name="imei" autocomplete="off"    placeholder="Enter Imei No" required></div>
    <div class="item">

<label> Amount </label>
<input type="number" name="amount" autocomplete="off"    placeholder="Enter Amount" required>
</div>
<div class="item">

<label> Date </label>
<input type="date" name="date"  autocomplete="off"  placeholder="Enter Date" required>
</div>

        <div class="item">
        <div class="search-container">
            <h2>Select Mobile</h2>
            <input type="text" name="device" id="search" autocomplete="off"  placeholder="Search..." >
            <div id="dropdown" class="dropdown">
                <!-- Suggestions will be inserted here -->
            </div>
        </div>
    </div>
    <div class="item">
        <label> Mobileid</label>
                <input type="mobileid" id="mobileid" name="mobileid" autocomplete="off"   placeholder="Mobileid" value="" readonly required>
                </div>
    

    </div>

<button id="finalsub" type="submit" style="display: none;" class="btn btn-success btn-lg" >Confirm Submit</button>
      </form>
   

      <button id="sub"   class="btn btn-success btn-lg" >Submit</button>
   


